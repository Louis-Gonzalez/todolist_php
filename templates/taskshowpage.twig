{# On étend le fichier base ici, car dans base on a déclare des blocks #}
{% extends 'base.twig' %} 

{% block content %}
    <div class="text-center m-2">
        <h1>Show Task {{id}}</h1>
        <p class="catégorie m-2"> Title :</p>
        <p class="info m-2">{{tasks[id-1]['title']}} </p>
        <p class="catégorie m-2"> Description : </p>
        <p class="info m-2"> {{tasks[id-1]['description']}} </p>
        <p class="catégorie m-2"> Durée : </p>
        <p class="info m-2"> {{tasks[id-1]['duration']}} </p>
        <p class="catégorie m-2"> Etat : </p>
        <p class="info m-2"> {{tasks[id-1]['status']}} </p>
        <p class="catégorie m-2"> Date de creation : </p>
        <p class="info m-2"> {{tasks[id-1]['create_at']}} </p>
        <p class="catégorie m-2"> Date de mise à jour : </p>
        <p class="info m-2"> {{tasks[id-1]['update_at']}} </p>
        <p class="m-5">
            <a class="btn btn-primary" href="http://localhost/formation_php/todolist_php/public/task">Back</a>
        </p>
    </div>
{% endblock %}
