{% extends "base.twig" %}
{% block content %}

    
    <div class= "text-center">
        <h1>Update Task {{ task.id }}</h1>
    </div>
    <div class= "text-center">
        <form class="text-center" method="POST" action="http://localhost/formation_php/todolist_php/public/task/update/{{ task.id }}" >
            <div class="m-2">
                <label for="title" class="form-label">Nom de la tache *</label>
                <input type="text" class="form-control" placeholder="Nom de la tache" name="title" value="{{task.title}}" required>
            </div>
            <div class="m-2" >
                <label for="description" class="form-label">Description de la tache *</label>
                <textarea maxlength="255" class="form-control" style="height: 100px" placeholder="Description de la tache" name="description" required>{{task.description}}</textarea>
            </div>
            <div class="m-6"> <!-- faire un menu déroulant -->
                <label for="duration" >Choose duration :</label>
                <select name="duration" id="duration" required>
                    <option>--Please choose an option--</option>
                    <option {% if task.duration == "Court terme" %} selected {% endif %}>Court terme</option>
                    <option {% if task.duration == "Moyen terme" %} selected {% endif %}>Moyen terme</option>
                    <option {% if task.duration == "Long terme" %} selected {% endif %}>Long terme</option>
                </select>
            </div>
            <div class="m-2"> <!-- faire un menu déroulant -->
                <label for="who" >Choose duration :</label>
                <select name="who" id="who" required>
                    <option>--Please choose an option--</option>
                    <option {% if task.who == "Adam" %} selected {% endif %}>Adam</option>
                    <option {% if task.who == "Cédric" %} selected {% endif %}>Cédric</option>
                    <option {% if task.who == "Julien" %} selected {% endif %}>Julien</option>
                    <option {% if task.who == "Louis" %} selected {% endif %}>Louis</option>
                    <option {% if task.who == "Marc" %} selected {% endif %}>Marc</option>
                    <option {% if task.who == "Thomas" %} selected {% endif %}>Thomas</option>
                </select>
            </div>
            <div class="m-2"><!-- faire un menu déroulant -->
                <label for="status">Choose a status :</label>
                <select name="status" id="status" required>
                    <option>--Please choose an option--</option>
                    <option {% if task.status == "En cours" %} selected {% endif %}>En attente</option>
                    <option {% if task.status == "En attente" %} selected {% endif %}>En cours</option>
                    <option {% if task.status == "Termine" %} selected {% endif %}>Termine</option>
                </select>
            </div>
            <div>
                <a class="btn btn-primary" href="http://localhost/formation_php/todolist_php/public/task">Back</a>
                <button type="submit" class="btn btn-success m-1">Mettre à jour la tâche</button>
            </div>
        </form>
    </div>


{% endblock %}